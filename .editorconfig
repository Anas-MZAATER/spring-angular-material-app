# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# 🌐 Default for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
            insert_final_newline = true
            trim_trailing_whitespace = true

# 📦 TypeScript (Angular)
[*.ts]
indent_size = 2
quote_type = single

# 🧾 HTML & CSS / SCSS
[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.scss]
indent_size = 2

# 📁 JSON files (Angular config, package.json, etc.)
[*.json]
indent_size = 2

# 🛠 Java (Spring Boot)
[*.java]
indent_size = 4
max_line_length = 120

# ⚙️ YAML files (application.yml, etc.)
[*.yml]
indent_size = 2

# 🔧 Properties files
[*.properties]
indent_size = 2

# 📝 Markdown (README, docs, etc.)
[*.md]
trim_trailing_whitespace = false
max_line_length = off