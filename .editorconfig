# EditorConfig: https://editorconfig.org
root = true

# Global defaults
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript files (Angular)
[*.ts]
quote_type = single
ij_typescript_use_double_quotes = false

# Java files (Spring Boot)
[*.java]
indent_size = 4
max_line_length = 120

# JSON and config files
[*.json]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS/SCSS files
[*.css]
indent_size = 2

[*.scss]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files (e.g., application.yml or Angular config)
[*.yml]
indent_size = 2

